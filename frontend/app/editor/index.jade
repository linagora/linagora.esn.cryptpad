script.
    window.onpopstate = function(event) {
      if(window.eventpopstate) {
        window.eventpopstate();
        window.onpopstate = null;
      }
    };
    
style(type='text/css').
  #editor-iframe {
      position:fixed;
      top:70px;
      left:0px;
      bottom:0px;
      right:0px;
      width:100%;
      height:100%;
      border:none;
      margin:0;
      padding:0;
      overflow:hidden;
  }
  .fade {
      transition: all linear 500ms;
      opacity: 1;
  }
  .fade.ng-hide {
      opacity: 0;
  }
  #feedback {
      display: none;
      position: fixed;
      top: 0px;
      right: 0px;
      border: 0px;
      height: 100vh;
      width: 30vw;
      background-color: #222;
      color: #ccc;
  }
  #debug {
      height: 20px;
      position: absolute;
      right: 0px;
      top: 70px;
  }
  #debug button {
      visibility: hidden;
  }
  #debug:hover button {
      visibility: visible;
  }
input(type="hidden" id="userToken" value='')
iframe.fade.row(id="editor-iframe" src="/cryptpad/app/editor/editor.html" ng-show='isLoaded')
.row(ng-show='!isLoaded')
